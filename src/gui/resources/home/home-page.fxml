      <bottom>
         <Label text="WECOME!!!" BorderPane.alignment="CENTER">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
      </bottom>
      <center>
         <Button mnemonicParsing="false" onAction="#onTenantButtonClicked" text="Tentant" BorderPane.alignment="CENTER" />
