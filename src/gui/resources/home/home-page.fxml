<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controller.home.HomePageController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <BorderPane prefHeight="200.0" prefWidth="200.0">
      <top>
          <Label text="Rental Management System" BorderPane.alignment="CENTER">
              <font>
                  <Font size="18.0" />
              </font>
          </Label>
      </top>
      <left>
         <Button mnemonicParsing="false" onAction="#onPropertyButtonClicked" text="Property" BorderPane.alignment="CENTER" />
